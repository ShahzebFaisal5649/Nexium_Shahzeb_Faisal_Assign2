model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  quotes    Quote[]
  summaries BlogSummary[]

  @@map("users")
}

model Quote {
  id        String   @id @default(cuid())
  content   String
  author    String
  category  String
  createdAt DateTime @default(now())

  // Relations
  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  @@map("quotes")
}

model BlogSummary {
  id          String   @id @default(cuid())
  title       String
  url         String
  summary     String
  urduSummary String?
  keywords    String[]
  createdAt   DateTime @default(now())

  // Relations
  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  @@map("blog_summaries")
}
